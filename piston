#!/usr/bin/env bash

case $1 in
    dev)
        shift
        docker-compose -f docker-compose.dev.yaml "$@"
        ;;
    prod)
        shift
        docker-compose -f docker-compose.yaml "$@"
        ;;
    update)
        git pull
        docker-compose build api
        docker-compose up -d api
        ;;
    clean-pkgs)
        git clean -fqXd packages
        ;;
    *)
        node cli/index.js "$@"
        ;;
esac